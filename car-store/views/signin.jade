doctype html
html
  head
    title='login title'
    link( rel="stylesheet" href="/bower/angular-material/angular-material.min.css")
  body
    div(ng-app="app")
      md-content(ng-controller="SigninController" layout="row" layout-align="space-around" layout-padding="layout-padding" ng-cloak="ng-cloak" class="login-form")
        md-card(flex="flex" flex-gt-sm="50" flex-gt-md="33")
          md-toolbar
            div(class="md-toolbar-tools")
              h2
                span Login Form
            
          md-card-content
            form(name="Form")
              md-input-container(class="md-block")
                label Login
                input(type="text" name="email" ng-model="email" placeholder="login" required="")
                div(ng-messages="Form.email.$error" role="alert" multiple="")
                  div(ng-message="required" class="my-message") Please enter your email.
              
              md-input-container(class="md-block")
                label Password
                input(type="password" name="password" ng-model="password" placeholder="password" required="" md-maxlength="16")
                div(ng-messages="Form.password.$error" role="alert" multiple="")
                  div(ng-message="required" class="my-message") Please enter your password.
                  div(ng-message="md-maxlength" class="my-message") Too long.
              
              md-button(ng-disabled="!Form.$valid" ng-click="signin()" class="md-raised md-primary") &nbsp Login &nbsp
          
      
    script(src="/bower/requirejs/require.js")
    
    script(src="/bower/angular/angular.min.js")

    script(src="/bower/angular-route/angular-route.min.js")
    script(src="/bower/angular-animate/angular-animate.min.js")
    script(src="/bower/angular-messages/angular-messages.js")
    script(src="/bower/angular-aria/angular-aria.min.js")
    script(src="/bower/angular-material/angular-material.min.js")
    
    script(src="/bower/angular-material-icons/angular-material-icons.min.js")
    
    script(src="/app.js")
    script(src="/$http-factory/$http-user.js")
    script(src="/controllers/signin-controller.js")
